{
	"scopeName": "source.one",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#functions"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.one",
					"match": "//.*$"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.one",
					"match": "\\b(let|fn|type|if|else|while|until|repeat|return|break|continue|guard)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.one",
					"match": "\\b(number|string|bool|null)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.one",
					"begin": "\"",
					"end": "\""
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.one",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.one",
					"match": "\\b[A-Za-z_][A-Za-z0-9_]*(?=\\s*\\()"
				}
			]
		}
	}
}